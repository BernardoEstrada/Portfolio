 {
  "name": "bernardoestrada",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "generate": "react-snap",
    "clean": "rm -rf dist",
    "deep-clean": "yarn clean && rm -rf node_modules && rm *.log",
    "build-static": "yarn clean && yarn build && yarn generate",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "reactSnap": {
    "source": "dist",
    "minifyHtml": {
      "collapseWhitespace": true,
      "removeComments": true,
      "removeRedundantAttributes": true,
      "removeScriptTypeAttributes": true,
      "removeStyleLinkTypeAttributes": true,
      "useShortDoctype": true
    },
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  },
  "paths": {
    "@assets/*": "./src/assets/*"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@nivo/circle-packing": "^0.83.0",
    "@nivo/core": "^0.83.0",
    "hsl-to-hex": "^1.0.0",
    "radash": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-particles": "^2.12.2",
    "react-scroll-parallax": "^3.4.2",
    "react-type-animation": "^3.1.0",
    "tsparticles-slim": "^2.12.0",
    "use-prefers-color-scheme": "^1.1.3"
  },
  "devDependencies": {
    "@types/hsl-to-hex": "^1.0.0",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-helmet": "^6.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.15",
    "daisyui": "^3.5.1",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.28",
    "prettier": "^3.0.3",
    "react-snap": "^1.23.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
